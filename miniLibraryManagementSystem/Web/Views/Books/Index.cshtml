@model miniLibraryManagementSystem.Domain.Models.PagedResult<miniLibraryManagementSystem.Domain.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">

    <h1 class="mb-4">All Books</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Author)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().IsBorrowed)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Author.FullName)</td>
                        <td>
                            @if (item.IsBorrowed)
                            {
                                <span class="badge bg-danger">Borrowed</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Available</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <partial name="_Pagination" model="Model" />
    </div>
</div>
